<div class="container">
  <div class="row">

    <div class="col-md-12">
      <div class="page-header">
        <h1>People List</h1>
      </div>
    </div>

    <% @users.each do |user| %>
      <div class="col-md-3 col-sm-4 col-xs-6 text-center user-item">

        <%= link_to user_path(user) do %>
          <!-- 可先利用 Placeholder 如 <img src="http://via.placeholder.com/128x128"> 產生圖片 -->
          <%= image_tag(user.avatar.url , class: "img-rounded") if user.avatar? %>
         
        
          <h4><%= user.name %></h4>
        <% end %>

       <%= render partial: "shared/like", locals: {user: user} %>

      </div>
    <% end %>

  </div>
</div>