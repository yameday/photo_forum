<% if user.is_favorited?(current_user) %>
  <%= link_to 'Unlike ' + user.favorites_count.to_s, unfavorite_user_path(user), method: :post, class: "btn btn-info" %>
<% else %>
  <%= link_to 'Like '+ user.favorites_count.to_s, favorite_user_path(user), method: :post, class: "btn btn-primary" %>
<% end %>